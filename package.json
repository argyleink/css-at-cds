{
  "name": "css-at-cds",
  "version": "1.0.0",
  "author": "Adam & Una",
  "description": "Resources for our talk at Chrome Dev Summit 2019",
  "main": "index.js",
  "scripts": {
    "dev:js": "rollup -c -w",
    "dev:css": "postcss app/index.css -o app/bundle.css -w",
    "dev:server": "browser-sync start --server 'app' --files 'app/index.html,app/bundle.css,app/bundle.js' --no-open",
    "build:pre:js": "rollup -c --environment NODE_ENV:production",
    "build:pre:css": "postcss app/index.css -o dist/bundle.css",
    "build:post:copy": "cp app/index.html dist/index.html",
    "build:post:copy-assets": "mkdir dist/assets && cp -r app/assets/* dist/assets/",
    "build": "rm -rf dist && concurrently npm:build:pre:* && concurrently npm:build:post:*",
    "start": "concurrently --kill-others npm:dev:*"
  },
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "2.26.7",
    "concurrently": "5.0.0",
    "import-http": "^0.3.1",
    "postcss": "7.0.18",
    "postcss-cli": "6.1.3",
    "postcss-easings": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-import-url": "^4.0.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "6.7.0",
    "rollup": "1.25.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^5.1.2"
  }
}
